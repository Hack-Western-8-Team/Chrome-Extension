{
    "manifest_version" : 3,
    "name" : "MakeCents",
    "description" : "Use MakeCents to easily navigate through the financial world.",
    "version" : "1.0.0",
    "content_security_policy": {
        "script-src" : "self"
    },
    "icons" : {
        "128" : "icon_128.png"
    },
    "action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "permissions" : [
        "activeTab"
    ],
    "content_scripts" : [
        {
        "js" : ["content.js"],
        "matches" : ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "terms.json" ],
            "matches": ["<all_urls>"],
            "extension_ids": []
        }
    ]
}